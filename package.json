{
  "name": "lightloop",
  "private": true,
  "scripts": {
    "dev": "bun run --filter @lightloop/web dev",
    "build": "bun run --filter '*' --if-present build",
    "test": "bun run --filter '*' --if-present test",
    "typecheck": "bun run --filter '*' --if-present typecheck",
    "lint": "bun run --filter '*' --if-present lint"
  },
  "workspaces": ["apps/*", "packages/*"],
  "trustedDependencies": [
    "@clerk/shared",
    "@parcel/watcher",
    "protobufjs"
  ]
}
